<div class="container">
  <div class="jumbotron">
    <h2>Word Definer</h2>
  </div>

  <% @list_word.each do |item| %>
    <h4><a href="/items/<%= item.id %>"><%= item.word %></a></h4>
  <% end %>

  <div class="well">
        <h4>Add an word to the list:</h4>
    <form action="/" method="post">
      <div class="form-group">
        <label for="word">word</label>
        <input id="w" name="word" class="form-control" type="text">
      </div>
      <div class="form-group">
        <label for="definition">define</label>
        <input id="d" name="definition" class="form-control" type="text">
      </div>
      <button type="submit" class="btn btn-primary">Add Word</button>
    </form>
  </div>
</div>
